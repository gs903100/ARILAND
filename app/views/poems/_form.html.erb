<%= form_for @poem do |f| %>
 
  <% if @poem.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@poem.errors.count, "error") %> prohibited
        this poem from being saved:
      </h2>
      <ul>
        <% @poem.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :image%><br>
    <%= f.file_field :image%>
  </p>
 
  <p>
    <%= f.label :information %><br>
    <%= f.text_area :information %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
